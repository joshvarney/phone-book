<html>
	<div id="box">
		<body>
		<div id="fb-root"></div>
			<script>(function(d, s, id) {
			  var js, fjs = d.getElementsByTagName(s)[0];
			  if (d.getElementById(id)) return;
			  js = d.createElement(s); js.id = id;
			  js.src = 'https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v3.1&appId=291516238119557&autoLogAppEvents=1';
			  fjs.parentNode.insertBefore(js, fjs);
			}(document, 'script', 'facebook-jssdk'));</script>
			<h1>Phone Book</h1>
			<div class="fb-login-button" data-max-rows="1" data-size="medium" data-button-type="continue_with" data-show-faces="true" data-auto-logout-link="false" data-use-continue-as="true"></div>
			<hr>				
			<h3>Login</h3>
					<form method="post" action="login_page">
					<input id="fbname" type="text" name="loginname" placeholder="User Name" minlength="2" maxlength="25" pattern="[a-zA-Z0-9\s]+" title="Only One Space No Special Characters" required><br><br>
					<input type="password" name="password" placeholder="Password" minlength="8" maxlength="12" pattern="[a-zA-Z0-9]+" title="No Special Characters or Spaces" required><br><br>
					<input class="button" type="submit" value="Login">
				</form>
				<div class="error"><%=error%></div>
				<h3>Create New Account</h3>
				<p>(Password 8-12 Characters)</p>
				<form method="post" action="login_page_new">
					<input type="text" name="loginname" placeholder="User Name" minlength="2" maxlength="25" pattern="[a-zA-Z0-9\s]+" title="Only One Space No Special Characters" required><br><br>
					<input id="password1" type="password" name="password" placeholder="Password" minlength="8" maxlength="12" pattern="[a-zA-Z0-9]+" title="No Special Characters or Spaces" required><br><br>
					<input id="password2" type="password" name="confirmpass" placeholder="Confirm" minlength="8" maxlength="12" pattern="[a-zA-Z0-9]+" title="No Special Characters or Spaces" required><br><br>	
					<input class="button" type="submit" value="Create Account">
				</form>
			<div class="error"><p id="validate-status"></p></div>
			<div class="error"><%=error2%></div>
		</body>
	</div>
	<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
	<script>
		$(document).ready(function() {
		  $("#password2").keyup(validate);
		});
		function validate() {
		  var password1 = $("#password1").val();
		  var password2 = $("#password2").val();		 
		    if(password1 == password2) {
		       $("#validate-status").text("Match");        
		    }
		    else {
		        $("#validate-status").text("No Match");  
		    }		    
		}
	</script>
</html>